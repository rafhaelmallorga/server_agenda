  "paths": {
    "/user": {
      "post": {
        "summary": "Create new user.",
        "description": "This route is responsible for creating a new user.",
        "tags": ["User"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              },
              "examples": {
                "user": {
                  "value": {
                    "first_name": "Rafhael",
                    "last_name": "Mallorga",
                    "email": "rm@email.com",
                    "password": "1234"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "409": {
            "description": "E-mail already exists!"
          },
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/UserResponse"
                }
              }
            }
          }
        }
      }
    },
    "/user/login": {
      "post": {
        "summary": "Login.",
        "description": "This route is responsible for user login.",
        "tags": ["User"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Login"
              },
              "examples": {
                "login": {
                  "value": {
                    "email": "rm@email.com",
                    "password": "1234"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "403": {
            "description": "Invalid credentials"
          },
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/LoginResponse"
                }
              }
            }
          }
        }
      }
    },
