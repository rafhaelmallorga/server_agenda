{
  "openapi": "3.0.0",
  "info": {
    "title": "Agenda Api Documentation",
    "description": "This API was producet to my personal portfolio, for a full stack project.",
    "termsOfService": "Free",
    "contact": {
      "email": "rafhaelmallorga@gmail.com"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000/",
      "description": "API de teste"
    }
  ],

  "paths": {
    "/clients": {
      "post": {
        "summary": "Create new client.",
        "description": "This route is responsible for creating a new client.",
        "tags": ["Clients"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Client"
              },
              "examples": {
                "client": {
                  "value": {
                    "full_name": "Big Tech Company Ltda",
                    "email": "contact@bigtech.com",
                    "phone": "11 3003-3003"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "409": {
            "description": "This client already exists!"
          },
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/Client"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Client": {
        "type": "object",
        "properties": {
          "full_name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "phone": {
            "type": "string"
          }
        }
      }
    }
  }
}
